@{
    Layout = null;
}
<!DOCTYPE HTML>
<html>
<head>
    <title>登录</title>
    <!-- Custom Theme files -->
    <link href="../../Content/Login/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- Custom Theme files -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Login form web template, Sign up Web Templates, Flat Web Templates, Login signup Responsive web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <!--Google Fonts-->
    <link href='http://fonts.useso.com/css?family=Roboto:500,900italic,900,400italic,100,700italic,300,700,500italic,100italic,300italic,400'
        rel='stylesheet' type='text/css'>
    <link href='http://fonts.useso.com/css?family=Droid+Serif:400,700,400italic,700italic'
        rel='stylesheet' type='text/css'>
    <!--Google Fonts-->

</head>
<body>
    <div class="login">
        <div class="login-top">
            <h1>
                登录</h1>
            <input type="text" placeholder="账户" max="16" id="user" />
            <input type="password" placeholder="密码" max="16" id="pwd" />
            <div class="forgot">
                @*<a href="#">forgot Password</a>*@ @*<input type="button" value="取消" id="cler" onclick="close()" class="forgot"/>*@
                <input type="submit" value="登录" id="Login" />
            </div>
        </div>
        <div class="login-bottom" id="msg">
            @* <h3>
                New User &nbsp;<a href="#">Register</a>&nbsp Here</h3>*@
        </div>
    </div>
    @*    <div class="copyright">
        <p>
            范博论股 &copy; 2015.6.10 <a href="" target="_blank" title="模板之家">范博论股</a></p>
    </div>*@
    <script src="../../assets/js/jquery.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $("#Login").click(function () {
                $("#msg").html('');
                var user = $("#user").val();
                var pwd = $("#pwd").val();
                var htmlmsg = "<h3>&nbsp;<a>账号或密码错误,请重新登录</a>&nbsp</h3>";
                if (user == "" || pwd == "") {
                    $("#msg").html('');
                    $("#msg").html(htmlmsg);
                } else {
                    $.ajax({
                        url: "/Test/Loading",
                        type: "POST",
                        dataType: "json",
                        data: { user: user, pwd: pwd },
                        success: function (objs) {
                            if (objs.code == 0) {
                                window.location.href = "/Test/UserInfo";
                            } else { $("#msg").html("<h3>&nbsp;<a>" + objs.msg + "</a>&nbsp</h3>"); }
                            $("#pwd").val('');
                        }
                    });
                }
            });

            function close() {
                window.close();
            }
        });
    </script>
</body>
</html>
